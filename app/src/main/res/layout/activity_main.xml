<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="365dp"
        android:layout_height="458dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/ACbtn"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/button_oval"
            android:onClick="btnSil"
            android:text="AC"
            app:layout_column="0"
            app:layout_row="0" />

        <Button
            android:id="@+id/negatifBtn"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/button_oval"
            android:onClick="btnTik"
            android:text="+/-"
            app:layout_column="1"
            app:layout_row="0" />

        <Button
            android:id="@+id/yuzdeBtn"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/button_oval"
            android:onClick="btnYuzde"
            android:text="%"
            app:layout_column="2"
            app:layout_row="0" />

        <Button
            android:id="@+id/bolmeBtn"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/button_oval"
            android:onClick="btnIslemler"
            android:text="/"
            app:layout_column="3"
            app:layout_row="0" />

        <Button
            android:id="@+id/carpmaBtn"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/button_oval"
            android:onClick="btnIslemler"
            android:text="x"
            app:layout_column="3"
            app:layout_row="1" />

        <Button
            android:id="@+id/cikarmaBtn"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/button_oval"
            android:onClick="btnIslemler"
            android:text="-"
            app:layout_column="3"
            app:layout_row="2" />

        <Button
            android:id="@+id/toplamaBtn"
            android:layout_width="90dp"
            android:layout_height="98dp"
            android:background="@drawable/button_oval"
            android:onClick="btnIslemler"
            android:text="+"
            app:layout_column="3"
            app:layout_row="3" />

        <Button
            android:id="@+id/sonucBtn"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/button_oval"
            android:onClick="btnSonuc"
            android:text="="
            app:layout_column="3"
            app:layout_row="4" />

        <Button
            android:id="@+id/sayi7Btn"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/button_oval2"
            android:onClick="btnTik"
            android:text="7"
            app:layout_column="0"
            app:layout_row="1" />

        <Button
            android:id="@+id/sayi4Btn"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/button_oval2"
            android:onClick="btnTik"
            android:text="4"
            app:layout_column="0"
            app:layout_row="2" />

        <Button
            android:id="@+id/sayi1Btn"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/button_oval2"
            android:onClick="btnTik"
            android:text="1"
            app:layout_column="0"
            app:layout_row="3" />

        <Button
            android:id="@+id/sayi0Btn"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/button_oval2"
            android:onClick="btnTik"
            android:text="0"
            app:layout_column="0"
            app:layout_row="4" />

        <Button
            android:id="@+id/sayi8Btn"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/button_oval2"
            android:onClick="btnTik"
            android:text="8"
            app:layout_column="1"
            app:layout_row="1" />

        <Button
            android:id="@+id/sayi5Btn"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/button_oval2"
            android:onClick="btnTik"
            android:text="5"
            app:layout_column="1"
            app:layout_row="2" />

        <Button
            android:id="@+id/sayi2Btn"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/button_oval2"
            android:onClick="btnTik"
            android:text="2"
            app:layout_column="1"
            app:layout_row="3" />

        <Button
            android:id="@+id/sayi00Btn"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/button_oval2"
            android:onClick="btnTik"
            android:text="00"
            app:layout_column="1"
            app:layout_row="4" />

        <Button
            android:id="@+id/sayi9Btn"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/button_oval2"
            android:onClick="btnTik"
            android:text="9"
            app:layout_column="2"
            app:layout_row="1" />

        <Button
            android:id="@+id/sayi6Btn"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/button_oval2"
            android:onClick="btnTik"
            android:text="6"
            app:layout_column="2"
            app:layout_row="2" />

        <Button
            android:id="@+id/sayi3Btn"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/button_oval2"
            android:onClick="btnTik"
            android:text="3"
            app:layout_column="2"
            app:layout_row="3" />

        <Button
            android:id="@+id/noktaBtn"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/button_oval2"
            android:onClick="btnTik"
            android:text="."
            app:layout_column="2"
            app:layout_row="4" />

    </androidx.gridlayout.widget.GridLayout>

    <EditText
        android:id="@+id/islemGoruntuleme"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:gravity="center|right"
        android:inputType="text"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>